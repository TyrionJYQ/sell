//这是“1”像素边框函数
border-1px($color)
  position: relative
  &:after
    display: block
    position: absolute 
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid $color
    content: " "
border-none()
  &:after
    display: none

//针对不同的dpr加载不同尺寸的图片
bg-image($url)
  background-image: url($url + '@2x.png')
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio:3)
    background-image: url($url + '@3x.png')